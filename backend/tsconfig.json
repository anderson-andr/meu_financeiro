{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "experimentalDecorators": true,        // Habilita o suporte a decoradores
    "emitDecoratorMetadata": true         // Gera metadados necess√°rios para o TypeORM
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],  // Certifique-se de incluir a pasta de tipos
  "exclude": ["node_modules"]
}
